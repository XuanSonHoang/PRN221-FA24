@page
@model Demo_Razor.Pages.StudentOption3.AddModel
@{
    ViewData["Title"] = "Add New Student";
    var depart = Model.departs;
}

<div class="container mt-4">
    <h2>Add New Student</h2>

    <form method="post" class="mt-3">
        <div class="mb-3">
            <label hidden for="Id" class="form-label">Student ID</label>
            <input hidden type="text" class="form-control" id="Id" name="Id" placeholder="Enter Student ID" />
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Student Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Student Name" required />
        </div>

        <div class="mb-3">
            <label for="Gender" class="form-label">Gender</label>
            <input type="radio" value="Male" name="gender" /> Male
            <input type="radio" value="Female" name="gender" /> Female
        </div>

        <div class="mb-3">
            <label for="Dob" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="Dob" name="Dob" required />
        </div>

        <div class="mb-3">
            <label for="Gpa" class="form-label">GPA</label>
            <input type="number" class="form-control" id="Gpa" name="Gpa" step="0.01" placeholder="Enter GPA" min="0" max="4" required />
        </div>

        <div class="mb-3">
            <label for="DepartId" class="form-label">Department</label> <br />
            @if (depart == null)
            {
                <option value="0">No department found</option>
            }
            else
            {
                foreach (var item in depart)
                {
                    <input type="checkbox" value="@item.Id" name="deepartment" class="depart-checkbox" /> @item.Name <br />
                }
            }
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/StudentOption2/List" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<script>
    const departCheckboxes = document.querySelectorAll('.depart-checkbox');

    departCheckboxes.forEach((checkbox) => {
        checkbox.addEventListener('change', (e) => {
            if (e.target.checked) {
                departCheckboxes.forEach((cb) => {
                    if (cb !== e.target) {
                        cb.checked = false;
                    }
                });
            }
        });
    });
</script>
