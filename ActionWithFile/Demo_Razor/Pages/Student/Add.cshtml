@page
@model Demo_Razor.Pages.Student.AddModel
@{
    ViewData["Title"] = "Add New Student";
    var depart = Model.departs;
}

<div class="container mt-4">
    <h2>Add New Student</h2>

    <form method="post" class="mt-3">
        <div class="mb-3">
            <label hidden for="Id" class="form-label">Student ID</label>
            <input hidden type="text" class="form-control" id="Id" name="Student.Id" placeholder="Enter Student ID" required />
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Student Name</label>
            <input type="text" class="form-control" id="Name" name="Student.Name" placeholder="Enter Student Name" required />
        </div>

        <div class="mb-3">
            <label for="Gender" class="form-label">Gender</label>
            <select class="form-select" id="Gender" name="Student.Gender" required>
                <option value="true">Male</option>
                <option value="false">Female</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="Dob" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="Dob" name="Student.Dob" required />
        </div>

        <div class="mb-3">
            <label for="Gpa" class="form-label">GPA</label>
            <input type="number" class="form-control" id="Gpa" name="Student.Gpa" step="0.01" placeholder="Enter GPA" min="0" max="4" required />
        </div>

        <div class="mb-3">
            <label for="DepartId" class="form-label">Department</label>
            <select class="form-control" name="Student.DepartId" required>
                @if (depart == null)
                {
                    <option value="0">No department found</option>
                }
                else
                {
                    foreach (var item in depart)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/Student/List" class="btn btn-secondary">Back to List</a>
    </form>
</div>
